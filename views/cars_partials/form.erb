<form action="/<%= @car.id %>" method="POST">
  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title" value="<%= @car.title %>" id="form_title">
  </div>
  <div>
    <label>Body</label>
    <textarea name="body" rows="8" cols="40" placeholder="The body of the post" id="form_body"><%= @car.body %></textarea>
  </div>
  <div>
    <label>Image</label>
    <textarea name="image" rows="8" cols="40" placeholder="The body of the post" id="form_body"><%= @car.image %></textarea>
  </div>
  <div>
    <input type="submit" value="Save Post" class="button">
  </div>
  <% if(@car.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
